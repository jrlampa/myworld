{
  "name": "osm-to-cad-downloader",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:electron": "vite build -c vite.electron.config.ts",
    "build": "tsc && vite build && npm run build:electron && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:5173 && npm run build:electron && electron .\"",
    "test:e2e": "playwright test",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "build": {
    "appId": "com.osmtocad.downloader",
    "productName": "OSM to CAD Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "py_engine",
        "to": "py_engine",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "venv",
        "to": "venv",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/electron-vite.svg"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "OSM to CAD"
    }
  },
  "dependencies": {
    "@turf/turf": "^7.3.4",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/uuid": "^10.0.0",
    "adm-zip": "^0.5.16",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/adm-zip": "^0.5.7",
    "@types/leaflet": "^1.9.8",
    "@types/node": "^18.15.11",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron": "^24.1.2",
    "electron-builder": "^25.1.8",
    "jsdom": "^28.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.2",
    "vitest": "^4.0.18",
    "wait-on": "^7.0.1"
  }
}
